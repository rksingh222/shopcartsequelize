<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (products.length> 0) { %>
                    <ul>
                        <% products.forEach(p=> { %>
                            <li>
                                <p>
                                    <%= p.title %>(<%= p.cartItem.quantity %>)
                                </p>
                                <div class="buttonSeperator">

                                    <form action="/cart/add" method="POST" onsubmit="return disableButton();">
                                        <input type="hidden" name="productId" value="<%= p.id %>">
                                        <button class="btn" id="register"><i class="fa-solid fa-plus"></i></button>
                                    </form>
                                    <form action="/delete-cart-item" method="POST">
                                        <input type="hidden" name="productId" value="<%= p.id %>">
                                        <button class="btn">Delete</button>
                                    </form>
                                </div>
                            </li>
                            <% }) %>
                            <hr>
                                <form method="post" action="/cart-order">
                                    <button type="submit" class="btn">order</button>
                                </form>
                    </ul>
                    <% } else { %>
                        <h1>No Products in Cart!</h1>
                        <% } %>
            </main>


            <%- include('../includes/end.ejs') %>